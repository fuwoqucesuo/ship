.wrapper-login {
  height: 100%;
  width: 100%;
  background-image: url(https://img1.tuhu.org/8l6Ze8T9C1iZevl2qyY-gw/bg.png);
  background-size: cover;
}
.wrapper-login .content {
  width: 70%;
  border-radius: 10rpx;
  position: absolute;
  left: 15%;
  top: 35%;
}
.wrapper-login .content .logo-info {
  display: flex;
  align-items: center;
  margin-bottom: 80rpx;
}
.wrapper-login .content .logo-info .logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #FFFFFF;
}
.wrapper-login .content .logo-info .system-name {
  font-size: 36rpx;
  color: #FFFFFF;
  margin-left: 10rpx;
}
.wrapper-login .content .item {
  border: 1px solid #FFFFFF;
  height: 70rpx;
  border-radius: 40rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}
.wrapper-login .content .item .myinput {
  height: 100%;
  margin-left: 10rpx;
}
.wrapper-login .content .login {
  margin-top: 60rpx;
  width: 100%;
  height: 70rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
