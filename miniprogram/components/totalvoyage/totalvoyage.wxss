.total-voyage {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
}
.total-voyage .top {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666666;
}
.total-voyage .totalMileage {
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  color: #333333;
  font-weight: 500;
}
.total-voyage .detail {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.total-voyage .detail .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.total-voyage .detail .item .title {
  font-size: 22rpx;
  color: #666666;
}
.total-voyage .detail .item .number {
  font-size: 38rpx;
  color: #333333;
  margin-top: 10rpx;
}
